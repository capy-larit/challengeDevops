<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/index-about.css" rel="stylesheet" />
</head>
<body style="background-color: #4196A6">
    <div class="d-flex flex-column justify-content-between align-items-center small-left-content">
        <a class="mt-3" asp-area="" asp-controller="Home" asp-action="Index">
            <img src="~/img/logo.svg" width="100" />
        </a>
        <div class="mb-3 d-flex flex-column align-items-center">
            <div>
                <a class="btn btn-info btn-lg mb-4 menu-button" role="button" asp-action="index">Conta</a>
            </div>
            <a asp-action="index" asp-controller="Home" class="mb-3">
                <img src="/img/next.svg" width="80" style="-moz-transform: scaleX(-1); -o-transform: scaleX(-1); -webkit-transform: scaleX(-1); transform: scaleX(-1);"/>
            </a>
        </div>
    </div>
    <main role="main">
        @RenderBody()
    </main>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
